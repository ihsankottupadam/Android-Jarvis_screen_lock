<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BaseTheme" parent="@android:style/Theme.Material">
		<item name="android:colorPrimary">#5175B9</item>
        <item name="android:colorPrimaryDark">#4567A0</item>
        <item name="android:colorAccent">#5BF8F9</item>
    </style>
	<style name="MainTheme" parent="@style/BaseTheme">

	</style>
    <style name="AppTheme" parent="@style/BaseTheme">
		<item name="android:actionBarStyle">@style/myTheme.AppActionBar</item>
	</style>
	<style name="AppTheme.NoActionBar" parent="@android:style/Theme.Material.NoActionBar">
		<item name="android:colorPrimary">#5175B9</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="android:colorAccent">#5BF8F9</item>
	</style>
	<style name="myTheme.AppActionBar" parent="@android:style/Widget.Material.ActionBar">
		<item name="android:background">#5175B9</item>
		<item name="android:displayOptions">homeAsUp|showTitle</item>
	</style>
</resources>
